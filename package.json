{
  "name": "olympus-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Olympus web application",
  "scripts": {
    "lint": "eslint 'public/**/*.js' 'scripts/**/*.js' --no-error-on-unmatched-pattern",
    "lint:fix": "eslint 'public/**/*.js' 'scripts/**/*.js' --no-error-on-unmatched-pattern --fix",
    "format": "prettier --write \"public/**/*.{html,css,js}\" \"scripts/**/*.js\"",
    "format:check": "prettier --check \"public/**/*.{html,css,js}\" \"scripts/**/*.js\"",
    "emulator": "firebase emulators:start",
    "emulator:hosting": "firebase emulators:start --only hosting",
    "deploy:preview": "firebase hosting:channel:deploy preview",
    "deploy": "firebase deploy --only hosting",
    "test": "cd tests && npm test",
    "test:install": "cd tests && npm install"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
